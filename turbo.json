{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["ENV", "NODE_ENV", "VITE_CONVEX_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["build/**"]
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build", "^test"],
      "inputs": ["$TURBO_DEFAULT$", "vitest.config.ts", "!**/.tmp_*", "!**/.tmp_*/**"]
    },
    "test-coverage": {
      "dependsOn": ["^build", "^test-coverage"],
      "inputs": ["$TURBO_DEFAULT$", "vitest.config.ts", "!**/.tmp_*", "!**/.tmp_*/**"],
      "outputs": ["coverage/**"]
    },
    "bench": {
      "dependsOn": ["^build", "^bench"],
      "inputs": ["$TURBO_DEFAULT$", "!**/.tmp_*", "!**/.tmp_*/**"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "inputs": ["$TURBO_DEFAULT$", "typedoc.json"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", "eslint.config.*"]
    },
    "lint-fix": {
      "dependsOn": ["^lint-fix"],
      "inputs": ["$TURBO_DEFAULT$", "eslint.config.*"],
      "cache": false
    }
  }
}
